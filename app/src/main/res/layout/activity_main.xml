<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/welcomescreen"
    android:visibility="visible"
    tools:context=".Buyers.MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="97dp"
        android:src="@drawable/logogif"></pl.droidsonroids.gif.GifImageView>

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="323dp"
        android:layout_marginEnd="65dp"
        android:fontFamily="@font/bad_script"
        android:text="Find, Pick And Exchange"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />


    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/join_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_now"
        android:layout_marginStart="20sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-black"
        app:button_bottom_padding="15dp"
        app:button_image_disabled="@drawable/ic_outline_lock_24"
        app:button_image_enabled="@drawable/ic_baseline_lock_open_24"
        app:button_left_padding="15dp"
        app:button_right_padding="15dp"
        app:button_top_padding="15dp"
        app:inner_text="Join Now"
        app:inner_text_bottom_padding="15dp"
        app:inner_text_size="20sp"
        app:inner_text_top_padding="15dp" />

    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/login_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seller_account"
        android:layout_marginStart="20sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="11dp"
        android:fontFamily="sans-serif-black"
        app:button_bottom_padding="15dp"
        app:button_image_disabled="@drawable/ic_baseline_login_24"
        app:button_image_enabled="@drawable/ic_outline_subdirectory_arrow_right_24"
        app:button_left_padding="15dp"
        app:button_right_padding="15dp"
        app:button_top_padding="15dp"
        app:inner_text="Existing Account? Login"
        app:inner_text_bottom_padding="15dp"
        app:inner_text_left_padding="35dp"
        app:inner_text_size="20sp"
        app:inner_text_top_padding="15dp" />

    <TextView
        android:id="@+id/seller_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/proxima_nova_font"
        android:text="Desire to become a Seller?"
        android:textAlignment="viewEnd"
        android:textColor="#4E4949"
        android:textSize="18dp"
        android:textStyle="bold" />
</RelativeLayout>